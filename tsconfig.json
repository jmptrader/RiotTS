{
    "compilerOptions": {
        "module": "umd",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "declaration": true,
        "lib": ["es5", "dom"],
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "outDir": "dist/",
        "strictNullChecks": true,
        "removeComments": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}